{
  "manifest_version": 2,
  "name": "React-Scope",
  "description": "Visualize your React code as it executes",
  "version": "1.0",
  "permissions": [
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches" : [ "<all_urls>" ],
      "js": [ "content_script.js" ]
    }
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    "/backend/hook.js"
  ]
}
